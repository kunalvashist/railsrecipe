<%= render "shared/page_title", title: @recipe.name %>
<hr />

<div class="col-md-8 well col-md-offset-2">
  <h4 class="center description"><strong>Description</strong></h4>
  <hr />
  <%= simple_format(@recipe.description) %>

  <% if loggedin? && (current_chef == @recipe.chef || current_chef.admin?)%>
    <%= link_to "Edit The Recipe", edit_recipe_path(@recipe), class:"btn btn-xs btn-warning"%>
    <%= link_to "Delete The Recipe", recipe_path(@recipe), method: :delete, data:{ confirm:"Are you certain you want to delete this recipe"}, class:"btn btn-xs btn-danger"%>
  <% end %>

  <%= link_to "Return to the listing recipe", recipes_path , class:"btn btn-xs btn-primary"%>

  <div class="pull-right">
    <p class="center">
      Created by:
    </p>
    <p class="center">
      <%= gravatar(@recipe.chef)%>
    </p>
    <p class="center"><small><%= @recipe.chef.name %></small></p>
    <p>
      <span class="quite"><small>Created <%= time_ago_in_words(@recipe.created_at)%> ago</small></span>
    </p>
  </div>
  <p>

  </p>

</div>
