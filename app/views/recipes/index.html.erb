<%= render "shared/page_title", title: "Select Recipe"%>
<hr />

<% @recipe.each do |r| %>
  <div class="row">
    <div class="col-md-2">
      <section class=" chef-info center">

        <%= gravatar(r.chef,{size:120})%>
      </section>
    </div>
    <div class="col-md-8 well">
      <h4><%= link_to r.name, recipe_path(r) %></h4>
      <p>
        <%= truncate(r.description, length: 50) %>
      </p>
      <p>
        <span class="quite"><small>Created <%= time_ago_in_words(r.created_at)%> ago</small></span>
      </p>
    </div>
  </div>
<% end %>

